@model CreateContactCommand


<h3>Kontakt Ekle</h3>
<form asp-action="Create">
    <div class="form-group">
        <input asp-for="@Model.PersonId" type="hidden" />
        <label asp-for="@Model.ContactName"></label>
        <input asp-for="@Model.ContactName" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.ContactName"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" type="tel" placeholder="5541234567" pattern="[0-9]{3} [0-9]{3} [0-9]{2} [0-9]{2}" maxlength="10" class="form-control" />
        <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
</form>