
@{
    ViewData["Title"] = TempData["FullName"] + " Kontaktlar";
}

<h2>@TempData["FullName"] Kontak Listesi</h2>

<div class="row">
    <div class="col-8 contact-update">
        @{
            await Html.RenderPartialAsync("_EditContactsPartial", new UpdateContactCommand());
        }
    </div>
    <div class="col-4">
        @{await Html.RenderPartialAsync("_CreateContactPartial", new CreateContactCommand() {PersonId= ViewBag.PersonId });}

    </div>
</div>
