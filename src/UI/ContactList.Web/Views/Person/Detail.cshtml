@model PersonViewDto
@{
    ViewData["Title"] = Model.FirstName +" "+ Model.LastName;
}

<form asp-action="Update">
    <div asp-validation-summary="All" class="text-danger" aria-hidden="true" style="display:none;"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" value="@Model.FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" value="@Model.LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input class="form-control" type="date" asp-for="BirthDate" />
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" type="email" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
